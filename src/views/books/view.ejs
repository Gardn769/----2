<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Название книги: <%= book.title %></h5>
                <p class="card-text">Описание книги: <%= book.description %></p>
                <p class="card-text">Автор: <%= book.authors %></p>
                <% if (book.fileCover) { %>
                    <div class="col-md-4">
                      <img src=<%- '/../storage/' + book.fileCover %> class="img-fluid rounded-start">
                    </div>
                  <% } %>
                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%= book.id %>" method="post" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../port/layout-end') %>
